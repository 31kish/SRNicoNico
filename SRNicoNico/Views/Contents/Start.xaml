<UserControl x:Class="SRNicoNico.Views.Contents.Start"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:contents="clr-namespace:SRNicoNico.Views.Contents"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:search="clr-namespace:SRNicoNico.Views.Contents.Search"
             xmlns:vm="clr-namespace:SRNicoNico.ViewModels"
			 xmlns:video="clr-namespace:SRNicoNico.Views.Contents.Video"
             d:DesignHeight="348"
             d:DesignWidth="585"
             mc:Ignorable="d"
			 >



	<Grid>
		<Grid.ColumnDefinitions>
			<ColumnDefinition Width="200" />
			<ColumnDefinition Width="559*" />
		</Grid.ColumnDefinitions>
	

		<search:Search />
		
		<ContentControl Grid.Column="1" Content="{Binding Content}">
			<ContentControl.Resources>

				<DataTemplate DataType="{x:Type vm:StartViewModel}">
					<Label Grid.Column="1" Content="NicoNico Viewer" FontSize="36"/>
				</DataTemplate>
				<DataTemplate DataType="{x:Type vm:SearchResultViewModel}">
					<search:SearchResult/>
				</DataTemplate>
				<DataTemplate DataType="{x:Type vm:VideoViewModel}">
					<video:Video/>
				</DataTemplate>
			</ContentControl.Resources>
			
		</ContentControl>
		
	
		



	</Grid>

</UserControl>
