<UserControl x:Class="SRNicoNico.Views.Contents.Video.VideoFlash"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SRNicoNico.Views.Contents.Video"
             xmlns:vm="clr-namespace:SRNicoNico.ViewModels"
             mc:Ignorable="d" 
             d:DesignHeight="208" d:DesignWidth="401"
             d:DataContext="{d:DesignInstance vm:VideoViewModel}"
			 >
    <Grid>
        <WebBrowser x:Name="browser" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" LoadCompleted="browser_LoadCompleted" />

        <local:ManagedPopup AllowsTransparency="True" Placement="Center" IsOpen="True" StaysOpen="True" PlacementTarget="{Binding ElementName=browser}">
			<local:Comment Width="{Binding ElementName=browser, Path=ActualWidth}" Height="{Binding ElementName=browser, Path=ActualHeight}" />
		</local:ManagedPopup>
		
    </Grid>
</UserControl>
