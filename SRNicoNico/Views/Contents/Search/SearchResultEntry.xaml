<UserControl x:Class="SRNicoNico.Views.Contents.Search.SearchResultEntry"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:i="http://schemas.microsoft.com/expression/2010/interactivity"
             xmlns:l="http://schemas.livet-mvvm.net/2011/wpf"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="clr-namespace:SRNicoNico.ViewModels"
             Width="auto"
             Height="80"
             BorderThickness="1"
             d:DataContext="{d:DesignInstance vm:SearchResultEntryViewModel}"
             d:DesignWidth="491"
             mc:Ignorable="d">
	
	
	
	<i:Interaction.Triggers>
		<i:EventTrigger EventName="MouseLeftButtonDown">
			<l:LivetCallMethodAction MethodName="Play" MethodTarget="{Binding}"/>
		</i:EventTrigger>
	</i:Interaction.Triggers>

	<Grid HorizontalAlignment="Stretch">
		<Grid.ColumnDefinitions>
			<ColumnDefinition Width="80" />
			<ColumnDefinition />
		</Grid.ColumnDefinitions>
		<Image Width="65"
		       Height="50"
		       Margin="5,15,0,0"
		       HorizontalAlignment="Left"
		       VerticalAlignment="Top"
		       Source="{Binding Node.thumbnail_url}" />
		<TextBlock Grid.Column="1"
		           Width="auto"
		           Height="20"
		           Margin="10,10,0,0"
		           HorizontalAlignment="Stretch"
		           VerticalAlignment="Top"
		           Foreground="#FFAAAAAA"
		           Text="{Binding Node.title}"
		           TextWrapping="Wrap" />
		<TextBlock HorizontalAlignment="Left" TextWrapping="Wrap" Text="再生数:" VerticalAlignment="Top" Grid.Column="1" Margin="10,35,0,0"/>
		<TextBlock Grid.Column="1"
		           Margin="60,35,0,0"
		           HorizontalAlignment="Left"
		           VerticalAlignment="Top"
		           Foreground="#FFAAAAAA"
		           Text="{Binding Node.view_counter, StringFormat={}{0:N0}}"
		           TextWrapping="Wrap" />
		
		<TextBlock HorizontalAlignment="Left" TextWrapping="Wrap" Text="コメント数:" VerticalAlignment="Top" Grid.Column="1" Margin="149,34,0,0"/>
		<TextBlock Grid.Column="1"
		           Margin="225,35,0,0"
		           HorizontalAlignment="Left"
		           VerticalAlignment="Top"
		           Foreground="#FFAAAAAA"
		           Text="{Binding Node.comment_counter, StringFormat={}{0:N0}}"
		           TextWrapping="Wrap" />

		<TextBlock HorizontalAlignment="Left" TextWrapping="Wrap" Text="マイリスト数:" VerticalAlignment="Top" Grid.Column="1" Margin="10,54,0,0"/>
		<TextBlock Grid.Column="1"
		           Margin="99,54,0,0"
		           HorizontalAlignment="Left"
		           VerticalAlignment="Top"
		           Foreground="#FFAAAAAA"
		           Text="{Binding Node.mylist_counter, StringFormat={}{0:N0}}"
		           TextWrapping="Wrap" />

		<TextBlock Grid.Column="1"
		           Margin="296,34,0,0"
		           HorizontalAlignment="Left"
		           VerticalAlignment="Top"
		           Foreground="#FFAAAAAA"
		           Text="{Binding Node.cmsid, StringFormat={}{0:N0}}"
		           TextWrapping="Wrap" Width="103" />


	</Grid>
</UserControl>
