             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:vm="clr-namespace:SRNicoNico.ViewModels"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SRNicoNico.Views.Contents.Video"
             xmlns:controls="clr-namespace:SRNicoNico.Views.Controls"
             xmlns:misc="clr-namespace:SRNicoNico.Views.Contents.Misc"
             xmlns:ei="http://schemas.microsoft.com/expression/2010/interactions"
             x:Class="SRNicoNico.Views.Contents.Live.LiveController"
             mc:Ignorable="d" 
             d:DataContext="{d:DesignInstance {x:Type vm:LiveWatchViewModel}}"
             d:DesignHeight="54.974" d:DesignWidth="900"
             Background="{DynamicResource ThemeBrushKey}"
             Foreground="{DynamicResource ActiveForegroundBrushKey}"
